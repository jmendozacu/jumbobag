<?xml version="1.0"?>
<config>
    <modules>
        <Jumbobag_Ecotax>
            <version>0.1.0</version>
        </Jumbobag_Ecotax>
    </modules>
    <global>
        <resources>
            <jumbobag_ecotax_setup>
                <setup>
                    <module>Jumbobag_Ecotax</module>
                </setup>
            </jumbobag_ecotax_setup>
        </resources>
        <models>
            <jumbobag_ecotax>
                <class>Jumbobag_Ecotax_Model</class>
            </jumbobag_ecotax>
        </models>
        <helpers>
            <jumbobag_ecotax>
                <class>Jumbobag_Ecotax_Helper</class>
            </jumbobag_ecotax>
        </helpers>
        <events>
            <checkout_cart_product_add_after>
                <observers>
                    <jumbobag_ecotax_checkout_cart_product_add_after>
                        <type>model</type>
                        <class>Jumbobag_Ecotax_Model_Observer</class>
                        <method>checkoutCartProductAddAfter</method>
                    </jumbobag_ecotax_checkout_cart_product_add_after>
                </observers>
            </checkout_cart_product_add_after>
        </events>
        <blocks>
            <jumbobag_ecotax>
                <class>Jumbobag_Ecotax_Block</class>
            </jumbobag_ecotax>
        </blocks>
        <sales>
            <quote>
                <totals>
                    <jumbobag_ecotax>
                        <class>jumbobag_ecotax/total_ecotax_quote</class>
                        <before>subtotal</before>
                    </jumbobag_ecotax>
                </totals>
            </quote>
        </sales>
    </global>
    <frontend>
        <layout>
            <updates>
                <jumbobag_ecotax>
                    <file>jumbobag/ecotax.xml</file>
                </jumbobag_ecotax>
            </updates>
        </layout>
    </frontend>
</config>
