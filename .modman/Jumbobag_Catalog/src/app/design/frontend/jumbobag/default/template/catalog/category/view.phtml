/**
 * Category view template
 *
 * @see Mage_Catalog_Block_Category_View
 */
?>

<?php
    $_helper    = $this->helper('catalog/output');
    $_category  = $this->getCurrentCategory();
    $_imgHtml   = '';
    if($_imgUrl = $_category->getImageUrl()) {
      echo '<div id="category-img" style="display:none;">'.$_imgUrl.'</div>';
    }
    echo '<h1 id="category-name" class="animated fadeInDown">Collection<br /><span class="bold-part">'.$_helper->categoryAttribute($_category, $_category->getName(), 'name').'</span></h1>';
?>
<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<?php if($_description=$this->getCurrentCategory()->getDescription()): ?>
    <div class="category-description-wrapper std ">
        <div class="category-description row col-md-12">
            <div class="category-description-texte col-md-8 col-md-offset-2 wow fadeInUp">
                <?php if($this->IsRssCatalogEnable() && $this->IsTopCategory()): ?>
                <a href="<?php echo $this->getRssLink() ?>" class="link-rss"><?php echo $this->__('Subscribe to RSS Feed') ?></a>
                <?php endif; ?>
                <p><?php echo $_helper->categoryAttribute($_category, $_description, 'description') ?></p>
            </div>
        </div>
    </div>
    <?php endif; ?>






<?php if($this->isContentMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>

<?php elseif($this->isMixedMode()): ?>
    <p class="category-image">
    <?php echo $this->getCmsBlockHtml() ?>
    </p>
    <?php echo $this->getProductListHtml() ?>

<?php else: ?>
    <?php echo $this->getProductListHtml() ?>
<?php endif; ?>

<script src="/skin/frontend/jumbobag/default/js/categorie.js"></script>

