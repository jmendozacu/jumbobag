<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="top.links">
            <action method="addLink" translate="label" module="customer">
                <label>Retailers</label>
                <url>onibi_storelocator</url>
                <title>Retailers</title>
                <prepare>true</prepare>
                <urlParams/>
                <position>6</position>
            </action>
        </reference>
    </default>
    <onibi_storelocator_index_index>
        <reference name="head">
            <!--<action method="addCss"><stylesheet>css/onibi/storelocator.css</stylesheet></action>-->
            <action method="addItem"><type>skin_css</type><name>css/storelocator.css</name></action>
            <action method="addItem"><type>skin_js</type><name>js/storelocator.js</name></action>
            <!--<action method="addItem"><type>js</type><name>onibi/storelocator.js</name><params/></action>-->
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="onibi_storelocator/store" name="store" template="onibi/storelocator/storelocator.phtml"/>
        </reference>
    </onibi_storelocator_index_index>
</layout>
