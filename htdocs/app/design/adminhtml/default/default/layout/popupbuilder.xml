<?xml version="1.0"?>

<layout version="1.0.0">
	<default>
	</default>

	<adminhtml_popupbuilder_popups>
			<reference name="content">
				<block type="core/template" name="header" template="popupbuilder/header.phtml" />
				<block type="core/template" name="popups" template="popupbuilder/popups.phtml" />
			</reference>
			<reference name="head">
			<action method="addItem">
				<type>skin_css</type>
				<name>css/PopupBuilder/popupstyles.css</name>
			</action>
		</reference>
	</adminhtml_popupbuilder_popups>
	<adminhtml_popupbuilder_addnew>
